{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "baseUrl": ".",
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules", "builds"]
}
